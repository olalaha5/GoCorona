extends html/layout.pug

block head 
    //- сдесь можно добавить код к тегу head(должен быть отступ)
    title 
    //--------------------------------------

block content
    //- сдесь можно добавить код к тегу body(должен быть отступ)
    .wrapper 
        header.header
            .header__container
                .header__menu.menu
                    a(href='/').menu__icon-link
                        img(src="img/LOGO.svg", alt="LOGO").menu__icon
                    .menu__burger.button-burger
                        span
                    nav.menu__body
                        ul.menu__list
                            li.menu__item 
                                a(href='#').menu__link HOME
                            li.menu__item 
                                a(href='#').menu__link FEATURES
                            li.menu__item 
                                a(href='#').menu__link SUPPORT
                            li.menu__item 
                                a(href='#').menu__link CONTACT US
                    .menu__button
                        a(href='#').button.button_blue DOWNLOAD
            
        main.main
            section.take-care 
                .take-care__container 
                    .take-care__content.content
                            h1.content__title Take care of yours family’s 
                                span.content__title.content__title_blue health.
                            .content__text All in one destination for COVID-19 health queries.  Consult 10,000+ health workers about your concerns.
                            .content__button
                                a(href="#").button GET STARTED
                    .take-care__decor 
                        img(src="img/decor1.svg", alt="decor")
                    a(href="#video").take-care__video-button.video-button 
                        img(src="img/buttonPlay.svg", alt="buttonPlay").video-button__img
                        .video-button__text Stay safe with GoCorona 
                            br
                            span Watch Video 

            section.Stay-safe 
                .Stay-safe__container 
                    .Stay-safe__media
                        .media
                            img(src="img/app.png", alt="app").media__img
                            .media__shadow 
                            .media__rect1
                            .media__rect2
                            .media__rect3
                    .Stay-safe__content-wrap
                        .Stay-safe__content.content
                            h2.content__title Stay safe with Go
                                span.content__title.content__title_red Corona.
                            .content__text 24x7 Support and user friendly mobile platform to bring healthcare to your fingertips. Signup and be a part of the new health culture.
                            .content__button
                                a(href="#").button Features
            section.talk 
                .talk__container
                    .talk__statistics.statistics
                        .statistics__content
                            .statistics__wrapper
                                .statistics__num 2m
                                .statistics__title Users
                            .statistics__wrapper
                                .statistics__num 78
                                .statistics__title Countries
                            .statistics__wrapper
                                .statistics__num 10,000+
                                .statistics__title Medical experts
                        .statistics__rect1
                        .statistics__rect2
                        .statistics__rect3
                    .talk__video-block 
                        .talk__content-wrap
                            .talk__content.content
                                    h2.content__title Talk to 
                                        span.content__title.content__title_blue experts. 
                                    .content__text Book appointments or submit queries into thousands of forums concerning health issues and prevention against noval Corona Virus.
                                    .content__button
                                        a(href="#").button Features
                        .talk__video#video 
                            <iframe src="https://www.youtube.com/embed/sohdv21BVNI" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            section.Healthcare
                .Healthcare__container
                    .Healthcare__content.content
                                h2.content__title
                                    span.content__title.content__title_red Healthcare 
                                    span at your Fingertips.
                                .content__text Bringing premium healthcare features to your fingertips. User friendly mobile platform to bring healthcare to your fingertips. Signup and be a part of the new health culture.
                    .Healthcare__row 
                        .Healthcare__item.card
                            img(src="img/person.svg", alt="person").card__img
                            h3.card__title Symptom Checker
                            .card__text Check if you are infected by COVID-19 with our Symptom Checker
                        .Healthcare__item.card
                            img(src="img/doctor.svg", alt="doctor").card__img
                            h3.card__title 24x7 Medical support
                            .card__text Consult with 10,000+ health workers about your concerns.
                        .Healthcare__item.card
                            img(src="img/heart.svg", alt="heart").card__img
                            h3.card__title Conditions
                            .card__text Bringing premium healthcare features to your fingertips.
        footer.footer 
            .footer__container 
                .footer__items 
                    a(href="#").footer__item
                        img(src="img/googlePlay.png", alt="googlePlay")
                    a(href="#").footer__item
                        img(src="img/appStore.png", alt="appStore")
    //--------------------------------------
        